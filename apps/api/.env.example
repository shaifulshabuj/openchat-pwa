# Environment Configuration
NODE_ENV=development
PORT=8000

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/openchat_dev"

# Redis (optional for development)
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# Password Reset
PASSWORD_RESET_TOKEN_TTL_MINUTES=60
PASSWORD_RESET_EMAIL_SUBJECT="Reset your OpenChat password"

# Email (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM="OpenChat <no-reply@openchat.local>"

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_PATH="./uploads"

# CORS
ALLOWED_ORIGINS="http://localhost:3000,https://shaifulshabuj.github.io"
