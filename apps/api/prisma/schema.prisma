// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  username    String   @unique
  displayName String
  avatar      String?
  password    String
  status      String   @default("OFFLINE") // ONLINE, OFFLINE, AWAY, BUSY
  lastSeen    DateTime?
  isVerified  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  sentMessages     Message[] @relation("MessageSender")
  chatParticipants ChatParticipant[]
  chatAdmins       ChatAdmin[]
  messageReactions MessageReaction[]
  messageStatuses  MessageStatus[]

  @@map("users")
}

model Chat {
  id          String   @id @default(cuid())
  type        String   @default("PRIVATE") // PRIVATE, GROUP, CHANNEL
  name        String?
  description String?
  avatar      String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  messages     Message[]
  participants ChatParticipant[]
  admins       ChatAdmin[]

  @@map("chats")
}

model ChatParticipant {
  id       String @id @default(cuid())
  userId   String
  chatId   String
  joinedAt DateTime @default(now())
  leftAt   DateTime?
  unreadCount Int @default(0)

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@unique([userId, chatId])
  @@map("chat_participants")
}

model ChatAdmin {
  id     String @id @default(cuid())
  userId String
  chatId String
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@unique([userId, chatId])
  @@map("chat_admins")
}

model Message {
  id        String      @id @default(cuid())
  content   String
  type      String      @default("TEXT") // TEXT, IMAGE, FILE, VOICE, VIDEO, LOCATION, CONTACT, SYSTEM
  senderId  String
  chatId    String
  replyToId String?
  metadata  String?     // JSON string for SQLite compatibility
  isEdited  Boolean     @default(false)
  isDeleted Boolean     @default(false)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  deletedAt DateTime?

  // Relations
  sender    User @relation("MessageSender", fields: [senderId], references: [id], onDelete: Cascade)
  chat      Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)
  replyTo   Message? @relation("MessageReply", fields: [replyToId], references: [id])
  replies   Message[] @relation("MessageReply")
  reactions MessageReaction[]
  statuses  MessageStatus[]

  @@map("messages")
}

model MessageReaction {
  id        String   @id @default(cuid())
  messageId String
  userId    String
  emoji     String   // üëç üëé ‚ù§Ô∏è üòÇ üòÆ üò¢ üò°
  createdAt DateTime @default(now())

  // Relations
  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId, emoji])
  @@map("message_reactions")
}

model MessageStatus {
  id          String   @id @default(cuid())
  messageId   String
  userId      String   // Who has read the message
  deliveredAt DateTime @default(now())
  readAt      DateTime?
  
  // Relations
  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([messageId, userId])
  @@map("message_status")
}