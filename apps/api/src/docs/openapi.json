{
  "openapi": "3.0.0",
  "info": {
    "title": "OpenChat API",
    "version": "1.0.0",
    "description": "OpenChat PWA API documentation."
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "Development server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "error": { "type": "string" }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "username": { "type": "string" },
          "displayName": { "type": "string" },
          "avatar": { "type": "string", "nullable": true },
          "status": { "type": "string", "enum": ["ONLINE", "OFFLINE", "AWAY", "BUSY"] }
        }
      },
      "Message": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "content": { "type": "string" },
          "type": { "type": "string", "example": "TEXT" },
          "chatId": { "type": "string" },
          "senderId": { "type": "string" },
          "isEdited": { "type": "boolean" },
          "isDeleted": { "type": "boolean" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" },
          "sender": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "username": { "type": "string" },
              "displayName": { "type": "string" },
              "avatar": { "type": "string", "nullable": true }
            }
          }
        }
      },
      "ReactionSummary": {
        "type": "object",
        "properties": {
          "emoji": { "type": "string" },
          "count": { "type": "integer" },
          "users": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "username": { "type": "string" },
                "displayName": { "type": "string" },
                "avatar": { "type": "string", "nullable": true }
              }
            }
          }
        }
      }
    }
  },
  "paths": {
    "/api/auth/login": {
      "post": {
        "summary": "Login user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": { "type": "string", "format": "email", "example": "alice@openchat.dev" },
                  "password": { "type": "string", "example": "Demo123456" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "data": {
                      "type": "object",
                      "properties": {
                        "user": { "$ref": "#/components/schemas/User" },
                        "token": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "401": {
            "description": "Invalid email or password",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/api/auth/register": {
      "post": {
        "summary": "Register user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "username", "displayName", "password"],
                "properties": {
                  "email": { "type": "string", "format": "email", "example": "new@openchat.dev" },
                  "username": { "type": "string", "example": "new_user" },
                  "displayName": { "type": "string", "example": "New User" },
                  "password": { "type": "string", "example": "Demo123456" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User registered",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "data": {
                      "type": "object",
                      "properties": {
                        "user": { "$ref": "#/components/schemas/User" },
                        "token": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error or user exists",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/api/auth/me": {
      "get": {
        "summary": "Get current user profile",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Profile data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "data": { "$ref": "#/components/schemas/User" }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/api/chats": {
      "get": {
        "summary": "List chats",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Chats list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "string" },
                          "type": { "type": "string" },
                          "name": { "type": "string", "nullable": true },
                          "description": { "type": "string", "nullable": true },
                          "unreadCount": { "type": "integer" },
                          "lastMessage": { "$ref": "#/components/schemas/Message" }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/api/chats/{chatId}/messages": {
      "post": {
        "summary": "Send message",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "chatId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["content"],
                "properties": {
                  "content": { "type": "string", "example": "Hello from OpenChat" },
                  "type": { "type": "string", "example": "TEXT" },
                  "replyToId": { "type": "string", "nullable": true },
                  "metadata": { "type": "object", "nullable": true }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Message created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "data": { "$ref": "#/components/schemas/Message" }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "403": {
            "description": "Not a member of this chat",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/api/chats/{chatId}/messages/{messageId}": {
      "put": {
        "summary": "Edit message",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "chatId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "messageId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["content"],
                "properties": {
                  "content": { "type": "string", "example": "Updated message" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Message updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "data": { "$ref": "#/components/schemas/Message" }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error or edit window expired",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "404": {
            "description": "Message not found or not owned",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete message",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "chatId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "messageId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Message deleted",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "message": { "type": "string", "example": "Message deleted successfully" }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Not authorized to delete",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "404": {
            "description": "Message not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/api/reactions/add": {
      "post": {
        "summary": "Add or toggle reaction",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["messageId", "emoji"],
                "properties": {
                  "messageId": { "type": "string" },
                  "emoji": { "type": "string", "example": ":+1:" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Reaction added",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "action": { "type": "string", "example": "added" },
                    "reaction": { "type": "object" }
                  }
                }
              }
            }
          },
          "200": {
            "description": "Reaction removed (toggle off)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "action": { "type": "string", "example": "removed" },
                    "reaction": { "type": "object" }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Message not found or access denied",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/api/reactions/{messageId}": {
      "get": {
        "summary": "Get reactions for a message",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "messageId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Reactions summary",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "data": {
                      "type": "object",
                      "properties": {
                        "messageId": { "type": "string" },
                        "reactions": {
                          "type": "array",
                          "items": { "$ref": "#/components/schemas/ReactionSummary" }
                        },
                        "totalReactions": { "type": "integer" }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Message not found or access denied",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/api/reactions/remove": {
      "delete": {
        "summary": "Remove reaction",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["messageId", "emoji"],
                "properties": {
                  "messageId": { "type": "string" },
                  "emoji": { "type": "string", "example": ":+1:" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Reaction removed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "message": { "type": "string", "example": "Reaction removed successfully" }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Reaction not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/api/message-status/mark-read": {
      "post": {
        "summary": "Mark messages as read",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["messageIds"],
                "properties": {
                  "messageIds": {
                    "type": "array",
                    "items": { "type": "string" },
                    "maxItems": 50
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Messages marked as read",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "message": { "type": "string" },
                    "markedCount": { "type": "integer" },
                    "readStatuses": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "messageId": { "type": "string" },
                          "readAt": { "type": "string", "format": "date-time" }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation failed or access denied",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/api/message-status/{messageId}/read-by": {
      "get": {
        "summary": "Get read status for message",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "messageId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Read status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "data": {
                      "type": "object",
                      "properties": {
                        "messageId": { "type": "string" },
                        "readBy": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "user": {
                                "type": "object",
                                "properties": {
                                  "id": { "type": "string" },
                                  "username": { "type": "string" },
                                  "displayName": { "type": "string" },
                                  "avatar": { "type": "string", "nullable": true }
                                }
                              },
                              "readAt": { "type": "string", "format": "date-time" }
                            }
                          }
                        },
                        "readCount": { "type": "integer" },
                        "totalParticipants": { "type": "integer" },
                        "allRead": { "type": "boolean" }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Message not found or access denied",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    }
  }
}
